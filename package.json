{
  "name": "stt-gateway-microservice",
  "version": "2.1.0",
  "description": "Speech-to-Text microservice (Hono â€” runs on Cloudflare Workers and Node.js)",
  "type": "module",
  "main": "dist/src/entry-node.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/src/entry-node.js",
    "start:dev": "NODE_ENV=development node --env-file=.env.development --import tsx --watch src/entry-node.ts",
    "start:worker:dev": "wrangler dev --port 8086",
    "start:prod": "NODE_ENV=production node dist/src/entry-node.js",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --selectProjects unit",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:debug": "NODE_OPTIONS=--experimental-vm-modules node --inspect-brk node_modules/.bin/jest --runInBand --detectOpenHandles",
    "test:unit:debug": "NODE_OPTIONS=--experimental-vm-modules node --inspect-brk node_modules/.bin/jest --runInBand --selectProjects unit --detectOpenHandles",
    "test:e2e:debug": "NODE_OPTIONS=--experimental-vm-modules node --inspect-brk node_modules/.bin/jest --runInBand --selectProjects e2e --detectOpenHandles",
    "test:e2e": "NODE_OPTIONS=--experimental-vm-modules jest --selectProjects e2e",
    "deploy:workers": "wrangler deploy"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/zod-validator": "^0.7.6",
    "hono": "^4.7.7",
    "pino": "^9.6.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250214.0",
    "@eslint/eslintrc": "^3.3.3",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.14.4"
  },
  "author": "Ivan K",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.13.1"
}