###### Basic app settings
NODE_ENV=development
LISTEN_HOST=localhost
LISTEN_PORT=3000

###### Timezone
# Force application timezone (affects pretty logs)
TZ=UTC

###### API prefix
API_BASE_PATH=api
API_VERSION=v1

###### Logging
# Development uses more verbose logging
LOG_LEVEL=debug

###### Authorization
# Enable/disable Bearer token authentication (default: false)
# Set to true to enable built-in Bearer token authentication
# When false, AUTH_TOKENS is not required and all requests are allowed
# Useful when using external authentication (e.g., API Gateway, reverse proxy)
AUTH_ENABLED=false

# Comma-separated list of allowed Bearer tokens for API authentication
# Required when AUTH_ENABLED=true for accessing /api/v1/transcriptions endpoints
# Not required when AUTH_ENABLED=false
# Example: AUTH_TOKENS=token1,token2,token3
AUTH_TOKENS=

###### STT settings
STT_DEFAULT_PROVIDER=assemblyai
STT_ALLOWED_PROVIDERS=assemblyai
STT_MAX_FILE_SIZE_MB=100
STT_REQUEST_TIMEOUT_SEC=15
STT_POLL_INTERVAL_MS=1500
STT_MAX_SYNC_WAIT_MIN=3
ALLOW_CUSTOM_API_KEY=true
ASSEMBLYAI_API_KEY=

