###### Basic app settings
NODE_ENV=development
LISTEN_HOST=localhost
LISTEN_PORT=3000

###### Timezone
# Force application timezone (affects pretty logs)
TZ=UTC

###### API prefix
API_BASE_PATH=api
API_VERSION=v1

###### Logging
# Development uses more verbose logging
LOG_LEVEL=debug

###### STT settings
STT_DEFAULT_PROVIDER=assemblyai
STT_ALLOWED_PROVIDERS=assemblyai
STT_MAX_FILE_SIZE_MB=100
STT_REQUEST_TIMEOUT_SEC=15
STT_POLL_INTERVAL_MS=1500
STT_MAX_SYNC_WAIT_MIN=3
# Default API key for AssemblyAI (optional; used if request has no apiKey)
ASSEMBLYAI_API_KEY=
