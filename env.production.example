###### Basic app settings
NODE_ENV=production
LISTEN_HOST=0.0.0.0
LISTEN_PORT=80

###### Timezone
# Force application timezone (affects pretty logs)
TZ=UTC

###### API prefix
API_BASE_PATH=api
API_VERSION=v1

###### Logging
# Production uses minimal logging for performance
LOG_LEVEL=warn

###### STT settings
STT_DEFAULT_PROVIDER=assemblyai
STT_ALLOWED_PROVIDERS=assemblyai
STT_MAX_FILE_SIZE_MB=100
STT_REQUEST_TIMEOUT_SEC=15
STT_POLL_INTERVAL_MS=1500
STT_MAX_SYNC_WAIT_MIN=3
# Allow requests to pass custom API key (overrides ASSEMBLYAI_API_KEY)
ALLOW_CUSTOM_API_KEY=false
# Default API key for AssemblyAI (leave empty in repo)
ASSEMBLYAI_API_KEY=
