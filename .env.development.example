###### Basic app settings
NODE_ENV=development
LISTEN_HOST=localhost
LISTEN_PORT=8080
# BASE_PATH=
LOG_LEVEL=warn
# Force application timezone (affects pretty logs)
TZ=UTC

###### STT settings
# Default speech-to-text provider name
DEFAULT_PROVIDER=assemblyai
# Comma-separated list of allowed providers (empty = all allowed)
ALLOWED_PROVIDERS=
# Maximum allowed audio file size in megabytes
MAX_FILE_SIZE_MB=100
# Timeout for individual HTTP requests to providers (seconds)
REQUEST_TIMEOUT_SECONDS=15
# Interval between transcription status polls (milliseconds)
POLL_INTERVAL_MS=1500
# Maximum time for synchronous transcription wait (minutes)
TOTAL_TIMEOUT_MINUTES=3
# Max retries for the initial submission request
MAX_RETRIES=3
# Delay between submission retries (milliseconds)
RETRY_DELAY_MS=1000
# Default API key for AssemblyAI (optional; used if request has no apiKey)
ASSEMBLYAI_API_KEY=
